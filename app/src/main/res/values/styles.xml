<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.button.light" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/button_background_light</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.button.dark" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background_accent</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.HeaderText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WhiteProgressStyle">
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>
